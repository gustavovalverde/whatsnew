{
	"name": "@whatsnew/types",
	"version": "0.4.0",
	"description": "TypeScript types and Zod schemas for the WNF changelog format",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"license": "MIT",
	"author": "Gustavo Valverde",
	"repository": {
		"type": "git",
		"url": "https://github.com/gustavovalverde/whatsnew",
		"directory": "packages/types"
	},
	"homepage": "https://github.com/gustavovalverde/whatsnew#readme",
	"bugs": {
		"url": "https://github.com/gustavovalverde/whatsnew/issues"
	},
	"keywords": [
		"changelog",
		"releases",
		"whatsnew",
		"wnf",
		"types",
		"typescript",
		"zod"
	],
	"dependencies": {
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.15",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"engines": {
		"node": ">=24"
	}
}
