{
	"name": "@whatsnew/api",
	"version": "0.1.0",
	"private": true,
	"description": "HTTP API for WNF changelog intelligence (Bun/Hono)",
	"type": "module",
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target bun",
