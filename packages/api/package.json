	},
	"dependencies": {
		"@whatsnew/core": "workspace:*",
		"hono": "^4.10.3",
		"dotenv": "^17.2.3",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/bun": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:",
		"vite": "catalog:"
	}
