{
	"name": "@whatsnew/cli",
	"version": "0.3.2",
	"description": "CLI tool to see what changed in your dependencies - whatsnew command",
	"type": "module",
	"bin": {
		"whatsnew": "./bin/whatsnew.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"bin"
	],
	"scripts": {
		"build": "tsc && bun run build:bin",
		"build:bin": "bun build bin/whatsnew.ts --outfile bin/whatsnew.js --target node --banner '#!/usr/bin/env node' --define \"__VERSION__='$(node -p \"require('./package.json').version\")'\"",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:unit": "vitest run --exclude 'tests/integration/**'",
		"test:e2e": "vitest run tests/integration/",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"cli": "bun bin/whatsnew.ts"
	},
	"license": "MIT",
	"author": "Gustavo Valverde",
	"repository": {
		"type": "git",
		"url": "https://github.com/gustavovalverde/whatsnew",
		"directory": "packages/cli"
	},
	"homepage": "https://github.com/gustavovalverde/whatsnew#readme",
	"bugs": {
		"url": "https://github.com/gustavovalverde/whatsnew/issues"
	},
	"keywords": [
		"changelog",
		"releases",
		"whatsnew",
		"wnf",
		"cli",
		"dependencies"
	],
	"dependencies": {
		"@whatsnew/core": "workspace:*",
		"@whatsnew/parsers": "workspace:*",
		"@whatsnew/types": "workspace:*",
		"date-fns": "^4.1.0"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.15",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"engines": {
		"node": ">=24"
	}
}
