{
	"name": "whatsnew",
	"version": "0.1.0",
	"private": true,
	"description": "Changelog intelligence platform for developers",
	"scripts": {
		"dev": "bun run --filter @whatsnew/api dev",
		"build": "bunx tsc --build && bun run --filter @whatsnew/cli build:bin && bun run --filter @whatsnew/api build",
		"test": "bun run --if-present --workspaces test",
		"lint": "bunx biome check packages/",
		"lint:fix": "bunx biome check packages/ --write",
		"lint:fix:unsafe": "bunx biome check packages/ --write --unsafe",
		"typecheck": "bun run --workspaces typecheck",
		"coverage": "bun run --if-present --workspaces test:coverage",
		"db:studio": "bun run --filter @whatsnew/api db:studio",
		"db:push": "bun run --filter @whatsnew/api db:push",
		"db:generate": "bun run --filter @whatsnew/api db:generate",
		"verify": "bun run lint && bun run typecheck && bun run test",
		"prepare": "husky",
		"ci:version": "changeset version && bun update",
		"ci:publish": "bun publish --filter '@whatsnew/types' && bun publish --filter '@whatsnew/parsers' && bun publish --filter '@whatsnew/core' && bun publish --filter '@whatsnew/cli' && changeset tag"
	},
	"keywords": [
		"changelog",
		"release-notes",
		"npm",
		"dependencies"
	],
	"author": "Gustavo Valverde",
	"license": "MIT",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"catalog": {
		"typescript": "^5.9.3",
		"vitest": "^4.0.3",
		"@vitest/coverage-v8": "^4.0.3",
		"zod": "^4.1.12",
		"@types/node": "^24.9.1",
		"@types/bun": "^1.3.1",
		"drizzle-kit": "^0.31.5",
		"bun-osv-scanner": "^1.0.0",
		"vite": "^7.1.12",
		"esbuild": "0.25.11",
		"bun-types": "^1.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@vitest/coverage-v8": "^4.0.15",
		"bun-osv-scanner": "^1.0.1",
		"bun-types": "^1.3.3",
		"esbuild": "catalog:",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"vite": "^7.2.6"
	},
	"engines": {
		"node": ">=24",
		"bun": ">=1.3.1"
	},
	"packageManager": "bun@1.3.1"
}
