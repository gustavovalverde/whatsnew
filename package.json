{
	"name": "whatsnew",
	"version": "0.1.0",
	"private": true,
	"description": "Changelog intelligence platform for developers",
	"scripts": {
		"dev": "bun run --filter @whatsnew/api dev",
		"build": "bunx tsc --build && bun run --filter @whatsnew/cli build:bin && bun run --filter @whatsnew/api build",
		"test": "bun run --if-present --workspaces test",
		"lint": "bunx biome check packages/ apps/",
		"lint:fix": "bunx biome check packages/ apps/ --write",
		"lint:fix:unsafe": "bunx biome check packages/ apps/ --write --unsafe",
		"typecheck": "bun run --workspaces typecheck",
		"coverage": "bun run --if-present --workspaces test:coverage",
		"db:studio": "bun run --filter @whatsnew/api db:studio",
		"db:push": "bun run --filter @whatsnew/api db:push",
		"db:generate": "bun run --filter @whatsnew/api db:generate",
		"verify": "bun run lint && bun run typecheck && bun run test",
		"prepare": "husky",
		"ci:version": "changeset version && bun update",
		"ci:publish": "bun scripts/publish.ts",
		"knip": "knip"
	},
	"keywords": [
		"changelog",
		"release-notes",
		"npm",
		"dependencies"
	],
	"author": "Gustavo Valverde",
	"license": "MIT",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"catalog": {
		"typescript": "^5.9.3",
		"vitest": "^4.0.3",
		"@vitest/coverage-v8": "^4.0.3",
		"zod": "^4.1.12",
		"@types/node": "^24.9.1",
		"@types/bun": "^1.3.1",
		"vite": "^7.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@commitlint/types": "^20.2.0",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.15",
		"bun-osv-scanner": "^2.0.0",
		"bun-types": "^1.3.4",
		"esbuild": "^0.27.1",
		"husky": "^9.1.7",
		"knip": "^5.72.0",
		"lint-staged": "^16.2.7",
		"typescript": "^5.9.3",
		"vite": "^7.2.7"
	},
	"engines": {
		"node": ">=24",
		"bun": ">=1.3.1"
	},
	"packageManager": "bun@1.3.1"
}
